<h1>Sign Up</h1>

<div class="row">
	<%= form_for @user do |f| %>
		<%= render "shared/form_errors", record: @user %>

		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<br>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<br>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
		<br>
		<div>
			<%= f.submit "Register!", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>
